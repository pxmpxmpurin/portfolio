---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link rel="icon" type="image/svg+xml" href="/portfolio/favicon.svg" />
    <title>pxmpxmpurin</title>
  </head>
  <body class="bg-white font-sans text-black dark:bg-zinc-950 dark:text-white tracking-wide transition-colors duration-300">
    <Navbar />
    <main class="px-6 sm:px-12 md:px-24 max-w-screen-xl mx-auto mt-">
      <slot />
    </main>
    <script>
      const toggle = document.getElementById('toggle-dark');

      function applyDarkMode(value: boolean) {
        document.documentElement.classList.toggle('dark', value);
        localStorage.setItem('theme', value ? 'dark' : 'light');
      }

      toggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.contains('dark');
        applyDarkMode(!isDark);
      });

      const saved = localStorage.getItem('theme');
      if (saved === 'dark' || (!saved && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        applyDarkMode(true);
      }
    </script>
  </body>
</html>